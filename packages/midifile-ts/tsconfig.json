{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
