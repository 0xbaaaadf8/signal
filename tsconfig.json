{
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*", "src/main/*", "src/common/*"]
    },
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "lib": ["es2017", "dom"],
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "src/submodules", "**/*.test.ts"]
}
